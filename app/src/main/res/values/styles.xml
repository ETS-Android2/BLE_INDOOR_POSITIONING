<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorDinner</item>
        <item name="colorPrimaryDark">@color/colorDinner</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TOOLBAR -->
    <style name="Toolbar.Material" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:popupElevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">textStart</item>
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>

    <!--TOOLBAR TEXT-->
    <style name="Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--NAV DRAWER-->
    <style name="nav_drawer_font">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="fab_style">
        <item name="android:color">@color/colorDinner</item>
    </style>

    <!--BOTTOM SHEET-->
    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Buttons.MainAndDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Buttons.SecondaryNoDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">10sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>