            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/hint_name"
                android:textColor="@color/colorDinner"
                android:padding="8dp"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/et_phone_number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_create_account" />

            <EditText
                android:id="@+id/et_family_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDinner"
                android:background="@drawable/rounded_border"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/hint_surname"
                android:padding="8dp"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_create_account"
                app:layout_constraintEnd_toEndOf="@id/et_phone_number" />

            <EditText
                android:id="@+id/et_phone_number"
                android:hint="@string/hint_phone_number"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/colorDinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/rounded_border_mp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name"
                android:layout_marginTop="16dp"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/et_email"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/colorDinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:background="@drawable/rounded_border_mp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_phone_number"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_password"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textColor="@color/colorDinner"
                android:layout_height="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:background="@drawable/rounded_border_mp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btn_create_account"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/button_shape"
                android:text="@string/btn_create_account"
                android:textAllCaps="false"
                android:layout_marginBottom="56dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_already_have_account"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/tv_have_an_account"
                android:textSize="12sp"
                android:textColor="@color/colorDinner"
                app:layout_constraintEnd_toEndOf="@+id/tv_sign_in"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_create_account" />

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="8dp"
                android:text="@string/tv_sign_in"
                android:textColor="@color/colorDinner"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/tv_already_have_account"
                app:layout_constraintEnd_toEndOf="@id/btn_create_account"
                app:layout_constraintTop_toBottomOf="@id/btn_create_account" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorDinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_create_account"
                android:layout_marginTop="16dp"
                tools:targetApi="lollipop" />

        </androidx.constraintlayout.widget.ConstraintLayout>
