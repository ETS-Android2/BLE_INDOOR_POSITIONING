<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    android:fitsSystemWindows="true"
    tools:context=".mainmenu.MainMenu"
    tools:openDrawer="start">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mv_map"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_change_map_to_outdoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="24dp"
            android:alpha=".7"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_change_map_to_outdoor"
            tools:ignore="RtlCompat"
            tools:targetApi="lollipop"
            android:contentDescription="@string/desc_reset_map" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_radar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="24dp"
            android:alpha=".7"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/fab_change_map_to_outdoor"
            app:layout_constraintEnd_toEndOf="@+id/fab_change_map_to_outdoor"
            app:layout_constraintTop_toBottomOf="@+id/fab_change_map_to_outdoor"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_radar"
            tools:ignore="RtlCompat"
            tools:targetApi="lollipop"
            android:contentDescription="@string/desc_reset_map" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="24dp"
            android:alpha=".7"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/fab_radar"
            app:layout_constraintEnd_toEndOf="@+id/fab_radar"
            app:layout_constraintTop_toBottomOf="@+id/fab_radar"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_graph"
            tools:ignore="RtlCompat"
            tools:targetApi="lollipop"
            android:contentDescription="@string/desc_reset_map" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="24dp"
            android:alpha=".7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_refresh_24"
            tools:ignore="RtlCompat"
            tools:targetApi="lollipop"
            android:contentDescription="@string/desc_reset_map" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_change_map_to_indoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:elevation="24dp"
            android:alpha=".7"
            app:layout_constraintStart_toStartOf="@+id/fab_refresh"
            app:layout_constraintEnd_toEndOf="@+id/fab_refresh"
            app:layout_constraintTop_toBottomOf="@+id/fab_refresh"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_change_map_to_indoor"
            tools:ignore="RtlCompat"
            tools:targetApi="lollipop"
            android:contentDescription="@string/desc_reset_map" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cdl_bsh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/bottom_sheet"
                layout="@layout/bottom_sheet" />

            <!--            <view-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:id="@+id/map"-->
            <!--                android:name="com.google.android.gms.maps.SupportMapFragment" />-->

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cdl_bsh" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_drawer"
        app:itemTextAppearance="@style/nav_drawer_font"
        app:menu="@menu/drawer_navigation" />

